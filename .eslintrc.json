{
    "env": {
        "node": true,
        "commonjs": true,
        "jest": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": [
            "error", {
                "code": 80,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ]
    },
    "overrides": [
        {
            "files": [ "*.yaml" ],
            "rules": {
                "indent": [
                    "error",
                    2
                ]
            }
        }
    ]
}
